{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install"
    },
    "deploy": {
        "startCommand": "npx drizzle-kit push && npx tsx server/index.ts",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}