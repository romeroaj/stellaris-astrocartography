{
  "expo": {
    "name": "Stellaris",
    "slug": "stellaris",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "stellaris",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B1026"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.stellaris.astrocartography"
    },
    "android": {
      "package": "com.stellaris.astrocartography",
      "adaptiveIcon": {
        "backgroundColor": "#0B1026",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      ["expo-router", { "origin": "https://replit.com/" }],
      "expo-font",
      "expo-web-browser",
      "expo-apple-authentication",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Stellaris to use your location to show you which planetary lines you are currently standing on."
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Stellaris to find friends from your contacts."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
